<section id="portfolio" class="portfolio">
	<div class="container" data-aos="fade-up">

		<div class="section-title">
			<h2>Portfolio</h2>
			<p>Check our Portfolio</p>
		</div>

		<div class="row" data-aos="fade-up" data-aos-delay="100">
			<div class="col-lg-12 d-flex justify-content-center">
				<ul id="portfolio-flters">
					<li data-filter="*" class="filter-active">All</li>
					<% Object.entries(portfolio.filterDisplayNameMap).forEach(([key, value]) => { %>
						<li data-filter=".filter-<%= key %>"><%= value %></li>
					<% }) %>	
				</ul>
			</div>
		</div>

		<div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
			<% portfolio.portfolio.forEach((item) => { %>
				<div class="col-lg-4 col-md-6 portfolio-item <%= item.filters
						.reduce((acc, curr) => `${acc} filter-${curr}`, "") %>">
					<img src="<%= item.image.src %>" class="img-fluid" alt="<%= item.image.alt %>">
					<div class="portfolio-info">
						<h4><%= item.title %></h4>
						<p><%= item.paragraph %></p>
						<a href="<%= item.image.src %>" data-gallery="portfolioGallery" class="portfolio-lightbox preview-link" title="<%= item.title %>"><i class="bx bx-plus"></i></a>
						<a href="<%= item.href %>" class="details-link" title="More Details"><i class="bx bx-link"></i></a>
					</div>
				</div>
			<% }) %>
		</div>

	</div>
</section>