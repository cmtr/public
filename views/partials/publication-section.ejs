<section id="portfolio" class="portfolio">
	<div class="container" data-aos="fade-up">

		<div class="section-title">
			<h2>Publications</h2>
			<p>Check our Publications</p>
		</div>

		<div class="row" data-aos="fade-up" data-aos-delay="100">
			<div class="col-lg-12 d-flex justify-content-center">
				<ul id="portfolio-flters">
					<li data-filter="*" class="filter-active">All</li>
					<% 
						const tags = Object
							.values(publications.publications)
							.map((item) => item.tags)
							.reduce((acc, curr) => {
								curr.forEach((tag) => {
									if (!acc.includes(tag))
										acc.push(tag);
								});
								return acc;
							}, []);

							tags.forEach((tag) => { 
					%>
						<li data-filter=".filter-<%= tag %>"><%= tag %></li>
					<% }) %>	
				</ul>
			</div>
		</div>

		<div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
			<% Object.values(publications.publications).forEach((item) => { %>
				<div class="col-lg-4 col-md-6 portfolio-item <%= item.tags
						.reduce((acc, curr) => `${acc} filter-${curr}`, "") %>">
					<img src="<%= item.images.head.src %>" class="img-fluid" alt="<%= item.images.head.alt %>">
					<div class="portfolio-info">
						<h4><%= item.title %></h4>
						<p><%= item.subTitle %></p>
						<p>By <strong>Authors Name</strong></p>
						<a href="<%= item.images.head.src %>" data-gallery="portfolioGallery" class="portfolio-lightbox preview-link" title="<%= item.title %>"><i class="bx bx-plus"></i></a>
						<a href="/publications/<%= item.id %>" class="details-link" title="More Details"><i class="bx bx-link"></i></a>
					</div>
				</div>
			<% }) %>
		</div>

	</div>
</section>